<div class="history-container">
  <h2 class="heading">Your Calculation History</h2>

  <% if (history.length > 0) { %>
  <div class="d-flex justify-content-center mb-3">
    <a href="/history?sort=newest" class="btn btn-outline-success btn-sm me-2">Newest First</a>
    <a href="/history?sort=oldest" class="btn btn-outline-warning btn-sm me-2">Oldest First</a>
    <a href="/history?filter=year" class="btn btn-outline-primary btn-sm me-2">This Year</a>
    <a href="/history?filter=month" class="btn btn-outline-secondary btn-sm">This Month</a>
  </div>
  <% } %>

  <% if (history.length === 0) { %>
    <p class="nh">No history yet. Try a calculation!</p>
  <% } else { %>
    <ul class="history-list">
      <% history.forEach(item => { %>
        <li class="history-item">
          <strong>Date:</strong> <%= new Date(item.createdAt).toLocaleString() %><br>
          <strong>Calculation:</strong> <%= item.calculation %><br>
          <strong>Suggestion:</strong> 
          <div class="suggestion-box"><%= item.suggestion %></div>
        </li>
      <% }) %>
    </ul>
  <% } %>
</div>

<style>
  .history-container {
    max-width: 900px;
    margin: 40px auto;
    padding: 20px;
    background: #f9f9f9;
    border-radius: 12px;
    box-shadow: 0 4px 10px rgba(0,0,0,0.1);
  }
  .history-list {
    list-style: none;
    padding: 0;
  }
  .history-item {
    margin: 15px 0;
    padding: 15px;
    border-left: 5px solid #4caf50;
    background: white;
    border-radius: 8px;
  }
  .nh {
    text-align: center;
    margin-top: 20px;
    color: #666;
  }
  .heading {
    font-weight: bold;
    text-align: center;
    color: #333;
  }
  .suggestion-box {
    margin-top: 8px;
    padding: 10px;
    background: #e8f5e9;
    border-radius: 6px;
    color: #2e7d32;
  }
</style>
